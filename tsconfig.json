{
    "compilerOptions": {
        "target": "es5",
        "sourceMap": true,
        "declaration": true,
        "module": "commonjs",
        "removeComments": false,
        "outDir": "lib/",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "strictNullChecks": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "lib": ["es2017"]
    },
    "files": [
        "src/**/*.ts"
    ]
}
